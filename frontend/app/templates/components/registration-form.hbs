<BsForm @formLayout="vertical" @model={{model}} @onSubmit={{action "submit"}} as |form|>
  <div class="row">
    <div class="col-md-10">
      <form.element @controlType="power-select" @property="course" @options={{courses}}
                    @searchEnabled={{true}} @search={{ action "search"}} @placeholder="Curso"
                    @selected= {{model.course}} @onChange= {{ action (mut model.course) }}
                    as |el|>
        <el.control @searchEnabled={{true}}
                    @search={{ action "search" }}
                    @noMatchesMessage="Resultados no encontrados"
                    @loadingMessage="Cargando opciones"
                    @searchMessage="Escribe para buscar"
                    as |option|>
          <b>{{option.name}}</b>
          Inicio: {{date-format-l option.startDate}}
          Fin: {{date-format-l option.endDate}}
        </el.control>
      </form.element>
    </div>
    <div class="col-md-2">
      <form.element @controlType="text" @property="date" as |el|>
        <PikadayInput @value={{el.value}} @onSelection={{action (mut el.value)}} id={{el.id}} @class="form-control"
                      @placeholder="Fecha"/>
      </form.element>
    </div>
  </div>
  <fieldset>
    <legend class="scheduler-border">Datos del Estudiante</legend>
    <div class="row">
      <div class="col-md-2">
        <form.element @controlType="text" @placeholder="Cédula" @property="studentDocumentNumber" />
      </div>
      <div class="col-md-2">
        <form.element @controlType="text" @placeholder="Nombre" @property="studentName" />
      </div>
      <div class="col-md-2">
        <form.element @controlType="text" @placeholder="Apellido" @property="studentLastname" />
      </div>
      <div class="col-md-2">
        <form.element @controlType="text" @property="studentBornDate" as |el|>
          <PikadayInput @value={{el.value}} @onSelection={{action (mut el.value)}} id={{el.id}} @class="form-control"
                        @placeholder="Nacimiento" />
        </form.element>
      </div>
      <div class="col-md-2">
        <form.element @controlType="text" @placeholder="Teléfono" @property="studentCellphone" />
      </div>
      <div class="col-md-2">
        <form.element @controlType="text" @placeholder="Nacionalidad" @property="studentNationality" />
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <form.element @controlType="text" @placeholder="Dirección" @property="studentAddress" />
      </div>
      <div class="col-md-3">
        <form.element @controlType="text" @placeholder="Colegio" @property="studentGraduatedFrom" />
      </div>
      <div class="col-md-2">
        <form.element @controlType="text" @placeholder="Año de egreso" @property="studentGraduatedYear" />
      </div>
      <div class="col-md-1">
        <form.element @controlType="text" @placeholder="RH" @property="studentBloodType" />
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <form.element @controlType="textarea" @placeholder="Observaciones" @property="studentNotes" />
      </div>
    </div>
  </fieldset>
  <legend class="scheduler-border">Datos del Tutor</legend>
  <div class="row">
    <div class="col-md-2">
      <form.element @controlType="text" @placeholder="Cédula" @property="tutorDocumentNumber" />
    </div>
    <div class="col-md-2">
      <form.element @controlType="text" @placeholder="Nombre" @property="tutorName" />
    </div>
    <div class="col-md-2">
      <form.element @controlType="text" @placeholder="Apellido" @property="tutorLastname" />
    </div>
    <div class="col-md-2">
      <form.element @controlType="text" @placeholder="Teléfono" @property="tutorCellphone" />
    </div>
    <div class="col-md-2">
      <form.element @controlType="text" @placeholder="Trabajo" @property="tutorWorkplace" />
    </div>
    <div class="col-md-2">
      <form.element @controlType="text" @placeholder="Dirección" @property="tutorAddress" />
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form.element @controlType="textarea" @placeholder="Observaciones" @property="tutor.observations" />
    </div>
  </div>
  <BsButton @defaultText={{buttonLabel}} @type="primary" @buttonType="submit" />
</BsForm>